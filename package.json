{
	"name": "kudadam",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:sitemap": "node scripts/generateSitemap.js",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json  --fail-on-warnings --fail-on-hints",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch --fail-on-warnings --fail-on-hints",
		"test": "node tests/generateUrls.js && playwright test",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:unit": "vitest",
		"coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@playwright/test": "^1.29.1",
		"@poppanator/sveltekit-svg": "^2.0.0",
		"@sveltejs/adapter-node": "1.0.0",
		"@sveltejs/kit": "1.0.1",
		"@types/html-minifier": "^4.0.2",
		"@types/simplecrawler": "^1.1.2",
		"autoprefixer": "^10.4.13",
		"cssnano": "^5.1.14",
		"eslint": "^8.30.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"html-minifier": "^4.0.0",
		"husky": "^8.0.2",
		"lint-staged": "^13.1.0",
		"mdsvex": "^0.10.6",
		"postcss": "^8.4.20",
		"postcss-load-config": "^4.0.1",
		"postcss-nesting": "^10.2.0",
		"prettier": "^2.8.1",
		"prettier-plugin-svelte": "^2.9.0",
		"rehype-external-links": "^2.0.1",
		"remark-attr": "^0.11.1",
		"remark-breaks": "^3.0.2",
		"remark-containers": "^1.2.0",
		"remark-emoji": "^3.0.2",
		"remark-gfm": "^3.0.1",
		"remark-slug": "^7.0.1",
		"simplecrawler": "^1.1.9",
		"svelte": "^3.55.0",
		"svelte-check": "^3.0.1",
		"svelte-paginate": "^0.1.0",
		"svelte-scrollprogress": "^1.0.4",
		"tailwindcss": "^3.2.4",
		"typescript": "^4.9.4",
		"vite": "^4.0.3",
		"vitest": "^0.26.2"
	},
	"type": "module",
	"lint-staged": {
		"*.svelte": "eslint --cache --fix",
		"*.{js,css,md}": "prettier --write"
	},
	"dependencies": {
		"sqlite": "^4.1.2",
		"sqlite3": "^5.1.4"
	}
}
